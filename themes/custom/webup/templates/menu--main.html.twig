{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level > 0 %}
      <ul {{ attributes.addClass('dropdown-menu') }}>
    {% endif %}
      {% for item in items %}
        {%
          set classes = [
            'menu-item',
            menu_level == 0 ? 'dropdown',
            menu_level == 1 and item.is_expanded ? 'dropdown-submenu',
            item.is_expanded ? 'menu-item--expanded',
            item.is_collapsed ? 'menu-item--collapsed',
            item.in_active_trail ? 'menu-item--active-trail',

          ]
        %}
        {% if menu_level == 0 %}
          <li{{ item.attributes.addClass(classes) }}>
            {% if item.is_expanded %}
              <a href="{{ item.url }}" class="dropdown-toggle" data-toggle="dropdown">{{ item.title }}  <span class="pe-7s-angle-down"></span></a>
              {% else %}
              <a href="{{ item.url }}">{{ item.title }}</a>
              {% endif %}
              {% if item.below %}
                {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
              {% endif %}
          </li>
        {% else %}
           <li{{ item.attributes.addClass(classes) }}>
            <a href="{{ item.url }}"{{ item.is_expanded ? ' class="dropdown-toggle" data-toggle="dropdown"' : '' }}>{{ item.title }}</a>
            {% if item.below %}
              {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
            {% endif %}
          </li>
        {% endif %}
      {% endfor %}
    {% if menu_level > 0 %}
      </ul>
    {% endif %}
  {% endif %}
{% endmacro %}