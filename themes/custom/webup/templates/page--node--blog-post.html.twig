                                                    {% endif %}
                                                {% endfor %}</span></span>
                                    <span class="meta-item"><i class="pe-icon pe-7s-user"></i> AUTHOR <span>{% if full_name %}{{ full_name }}{% else %}{{ user_name }}{% endif %}</span></span>
                                    <span class="meta-item"><i class="pe-icon pe-7s-comment"></i> COMMENTS <span>{{ node.field_blog_comments.comment_count }}</span></span>
                                    <span class="meta-item post-date"><i class="pe-icon pe-7s-clock"></i> POSTED <span>{{ node.created.value|date('dS F, Y') }}</span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section>
                <div class="section-inner">
                    <div class="container pad-sides-120">
                        <div class="row">
                            {% if single_sidebar == 'left' %}
                                <div id="post-sidebar" class="col-sm-3">
                                    {{ page.sidebar }}
                                </div>
                                <div id="post-content" class="col-sm-8 col-sm-offset-1 blog-item mb60 wow">
                                    
                                    {{ page.content_full_bar }}
                                    {{ page.content }}
                                </div>
                            {% else %}
                                <div id="post-content" class="col-sm-8 blog-item mb60 wow">

                                    {{ page.content_full_bar }}
                                    {{ page.content }}
                                </div>
                                <div id="post-sidebar" class="col-sm-3 col-sm-offset-1">
                                    {{ page.sidebar }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </section>

            <section class="dark-wrapper opaqued parallax">
                <div id="contact-tabs" role="tabpanel">

                    <!-- Nav tabs -->
                        {{ page.section_3 }}

                    <!-- Tab panes -->
                    <div class="tab-content" id="tabs-collapse">
                        {{ page.section_2 }}
                    </div>
                </div>
            </section>
        {% endif %}
        {% if setting_footer == 'style2' %}
          {% include theme_path ~ "/templates/footer/footer-2.html.twig" %}
        {% elseif setting_footer == 'style3' %}
          {% include theme_path ~ "/templates/footer/footer-3.html.twig" %}
        {% elseif setting_footer == 'style4' %}
          {% include theme_path ~ "/templates/footer/footer-4.html.twig" %}
        {% elseif setting_footer == 'style5' %}
          {% include theme_path ~ "/templates/footer/footer-5.html.twig" %}
        {% elseif setting_footer == 'style6' %}
          {% include theme_path ~ "/templates/footer/footer-6.html.twig" %}
        {% else %}
          {% include theme_path ~ "/templates/footer/footer-1.html.twig" %}
        {% endif %}

    </div>
    <div class="flexpanel">
        <div class="viewport-wrap">
            <div class="viewport">
                {{ page.slid_bar }}
            </div>
        </div>
    </div>