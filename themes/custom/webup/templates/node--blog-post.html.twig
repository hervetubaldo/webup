    	    </div>
    	    {{ content.field_blog_comments }}
    	</div>
    {% else %}
    	{% if single_sidebar == 'left' %}
            <div class="row">
                <div class="col-sm-12 single-post-content">
                    {{ content.body }}

                    <div data-easyshare>

                        <!-- Facebook -->
