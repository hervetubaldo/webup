{% set imageoneURL = file_url(node.field_blog_image.0.entity.uri.value) %}
{% set user_name = node.getRevisionAuthor().name.value %}
{% set full_name = node.getRevisionAuthor().field_full_name.value %}
{% set single_sidebar = node.field_default_sidebar.0.value %}
    {% if single_sidebar == '' %}
        {% set single_sidebar = 'left' %}
    {% endif %}
{% set blog_format = node.field_blog_format.0.value %}
    {% if blog_format == '' %}
        {% set blog_format = 'fullwidth' %}
    {% endif %}
{% set comment_c = node.field_blog_comments.comment_count %}
{% if page %}
    {% if blog_format == 'thin' %}
    	<div id="post-content" class="col-sm-8 col-sm-offset-2 blog-item mb60 wow">
    	    <div class="row">
    	        <div class="col-sm-12 single-post-content">
    	            {{ content.body }}

    	            <div data-easyshare>

                        <!-- Facebook -->
                        <button onClick="window.open('http://www.facebook.com/sharer.php?u={{ pageURL }}','Facebook','width=600,height=300,left='+(screen.availWidth/2-300)+',top='+(screen.availHeight/2-150)+''); return false;" class="komplet-button-share komplet-facebook-button">
                            <span>Share</span>
                        </button>
                        <span class="komplet-share"></span>
                        <button onClick="window.open('http://twitter.com/share?url={{ pageURL }}&amp;text={{ title }}','Twitter share','width=600,height=300,left='+(screen.availWidth/2-300)+',top='+(screen.availHeight/2-150)+''); return false;" class="komplet-button-share komplet-tweet-button">
                            <span>Tweet</span>
                        </button>
                        <span class="komplet-share"></span>
                        <!-- Google+ -->
                        <button onClick="window.open('https://plus.google.com/share?url={{ pageURL }}','Google plus','width=585,height=666,left='+(screen.availWidth/2-292)+',top='+(screen.availHeight/2-333)+''); return false;" class="komplet-button-share komplet-google-button">
                            <span>Google+</span>
                        </button>
                    </div>
    	        </div>
    	    </div>
    	</div>

    	<div id="comments-list" class="col-sm-8 col-sm-offset-2 gap wow">
    	    <div class="mt60 mb50 single-section-title">
    	        <h3>{% if comment_count == 1 %}{{ comment_c }} comment{% else %}{{ comment_c }} comments{% endif %}</h3>
    	    </div>
    	    {{ content.field_blog_comments }}
    	</div>
    {% elseif blog_format == 'fullwidth' %}
    	<div id="post-content" class="col-sm-12 blog-item mb60 wow">
    	    <div class="row">
    	        <div class="col-sm-12 single-post-content">
    	            {{ content.body }}

    	            <div data-easyshare>

                        <!-- Facebook -->
                        <button onClick="window.open('http://www.facebook.com/sharer.php?u={{ pageURL }}','Facebook','width=600,height=300,left='+(screen.availWidth/2-300)+',top='+(screen.availHeight/2-150)+''); return false;" class="komplet-button-share komplet-facebook-button">
