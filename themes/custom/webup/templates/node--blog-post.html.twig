    	{% endif %}
    {% endif %}
{% elseif vcname == 'blog_categories' %}
    <div class="col-sm-6 blog-item mb100 wow match-height">
        <div class="row">
            <div class="col-xs-12">
                <div class="hover-item mb30">
                    <img src="{{ imageoneURL }}" class="img-responsive smoothie" alt="{{ node.getTitle() }}">
                    <div class="overlay-item-caption smoothie"></div>
                    <div class="hover-item-caption smoothie">
                        <h3 class="vertical-center smoothie"><a href="{{ url }}" class="smoothie btn btn-primary page-scroll" title="view article">View</a></h3>
                    </div>
                </div>
                <h2 class="post-title">{{ node.getTitle() }}</h2>
                <div class="item-metas text-muted mb30">
                    <span class="meta-item"><i class="pe-icon pe-7s-folder"></i> POSTED IN <span>{{ content.field_categories }}</span></span>
                    <span class="meta-item"><i class="pe-icon pe-7s-user"></i> AUTHOR <span>{% if full_name %}{{ full_name }}{% else %}{{ user_name }}{% endif %}</span></span>
                </div>
                <p>{{ node.body.summary|length > 308 ? node.body.summary|slice(0,307) ~ '...' : node.body.summary }}</p>
                <a class="btn btn-primary mt30" href="{{ url }}">Read More</a>
            </div>
        </div>
    </div>
