<div class="master-wrapper">

    {% if setting_header == 'style2' %}
        {% include theme_path ~ "/templates/header/header-2.html.twig" %}
    {% elseif setting_header == 'style3' %}
        {% include theme_path ~ "/templates/header/header-3.html.twig" %}
    {% elseif setting_header == 'style4' %}
        {% include theme_path ~ "/templates/header/header-4.html.twig" %}
    {% elseif setting_header == 'style5' %}
        {% include theme_path ~ "/templates/header/header-5.html.twig" %}
    {% elseif setting_header == 'style6' %}
        {% include theme_path ~ "/templates/header/header-6.html.twig" %}
    {% else %}
        {% include theme_path ~ "/templates/header/header-1.html.twig" %}
    {% endif %}
    <!-- Header -->
    <header id="headerwrap"
            class="backstretched fullheight komplet-section-portfolio-single">
        {% for img in node.field_portfolio_header_bg %}
            {% set image_url = file_url(img.entity.uri.value) %}
            <div class="hidden komplet-bg-get-src"
                 data-bg-src="{{ image_url }}"></div>
        {% endfor %}
        <div class="container vertical-center">
            <div class="intro-text vertical-center text-left smoothie">
                {{ page.content_full_bar }}
                {{ page.content }}
                <div class="text-center nopadding white wow"
                     data-wow-delay="3.5s">
                    {% if node.field_date_format.0.value %}
                        {% set date = node.field_date_format.0.value|date('M, d, Y') %}
                        <div id="countdown" data-date="{{ date }}"></div>
                    {% endif %}
                </div>
                <div class="intro-sub-heading wow fadeIn secondary-font"
                     data-wow-delay="0.4s">{{ node.field_text_static.0.value }}
                    <span class="rotate">{{ node.field_text_rotate.0.value }}</span>
                </div>
            </div>
        </div>
    </header>

</div>
<div class="flexpanel">
    <div class="viewport-wrap">
        <div class="viewport">
            {{ page.slid_bar }}
        </div>
    </div>
</div>